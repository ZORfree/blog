    <%
        function delHtmlTag( str ){
            return str.replace(/<[^>]+>/g,"");
        }
        var tags = [];
        if( page&&page.tags ){
        	page.tags.each(function( tag , index ){
        		tags.push( tag.name );
        	})
        }

        var excerpt;
        if( page && page.excerpt ){
        	excerpt = delHtmlTag(page.excerpt).replace(/\s/g,'');
        }else if(page && page.content){
